# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/job_openings_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# LLM API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
PRIMARY_LLM_PROVIDER=openai  # openai or anthropic
SECONDARY_LLM_PROVIDER=anthropic  # fallback provider
LLM_MODEL_NAME=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Application Settings
ENVIRONMENT=development  # development, staging, production
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your_secret_key_here_please_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json or text

# Cache Settings
CACHE_TTL_SECONDS=86400  # 24 hours
CACHE_PREFIX=job_autogen

# Human-in-the-Loop Settings
FEEDBACK_SESSION_TIMEOUT=3600  # 1 hour in seconds
MAX_RETRY_COUNT=3

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
STREAMING_CHUNK_SIZE=1024

# Feature Flags
ENABLE_STREAMING=true
ENABLE_CACHING=true
ENABLE_FALLBACK=true
ENABLE_MONITORING=true
